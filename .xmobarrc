Config {
    position = Bottom,
    font =  "xft:Droid Sans Mono:size=10:antialias=true",
    --template = "%battery% | %multicpu% | %coretemp% | %dynnetwork% }%StdinReader%{ %date%", 
    template = "%battery% | %volume% | %wifi% }%StdinReader%{ %spotify% %date%", 
    commands = 
    [
        Run DynNetwork ["--template", "<dev>: <tx>kB/s|<rx>kB/s",
            "--Low",	"1000",	-- units: B/s
            "--High",	"5000",
            "--low",	"#669900",
            "--normal",	"darkorange",
            "--high",	"darkred"
        ] 10,
	    Run MultiCpu ["--template", "CPU: <total0>%|<total1>%",
            "--Low",	"50",
            "--High",	"85",
            "--low",    "#669900",
            "--normal", "darkorange",
            "--high",   "darkred"
        ] 10,        
        Run CoreTemp ["--template", "Temp:<core0>°C|<core1>°C",
            "--Low",    "70",
            "--High",   "80",
            "--low",    "#669900",
            "--normal", "darkorange",
            "--high",   "darkred"
        ] 50,
        Run Battery ["--template", "<acstatus>",
            "--Low",    "10",
            "--High",   "80",
            "--low",    "darkred",
            "--normal", "darkorange",
            "--high",    "#669900",
            -- Discharging
            "--",
            "-o","<left>% (<timeleft>)",
            -- AC "on"
            "-O","<left>% <fc=#dAA520>Charging</fc>",
            -- Charged
            "-i","<left>% <fc=#006000>Charged</fc>"
        ] 50,
        Run Date "%D %-I:%M %p" "date" 10,
        Run StdinReader,
        Run Com "/home/chris/scripts/getvolume.sh" [] "volume" 1,
        Run Com "/usr/bin/python3" ["/home/chris/scripts/wifi.py"] "wifi" 50,
        Run Com "/usr/bin/python3" ["/home/chris/scripts/spotify.py"] "spotify" 10
        ]
}
